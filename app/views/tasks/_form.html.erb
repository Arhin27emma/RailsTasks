<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container mt-2">
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :first_name, class: "form-label" %>
          <%= form.text_field :first_name, class: "form-control", placeholder:"Enter your first name" %>
        </div>

        <div class="form-group">
          <%= form.label :last_name, class: "form-label" %>
          <%= form.text_field :last_name, class: "form-control",  placeholder:"Enter your last name" %>
        </div>

        <div class="form-group">
          <%= form.label :email, class: "form-label" %>
          <%= form.text_field :email, class: "form-control", placeholder:"Enter your email" %>
        </div>

        <div class="form-group">
          <%= form.label :phone, class: "form-label" %>
          <%= form.text_field :phone, class: "form-control", placeholder:"Enter your phone number" %>
        </div>

        <div class="form-group">
          <%= form.label :linkedIn, class: "form-label" %>
          <%= form.text_field :linkedIn, class: "form-control", placeholder:"Enter your linkedIn account" %>
        </div>

        <div class="form-group">
          <%= form.label :github, class: "form-label" %>
          <%= form.text_field :github, class: "form-control", placeholder:"Enter your github account" %>
        </div>

        <div class="form-group">
          <%= form.number_field :user_id, id: :task_user_id, class: "form-control", value: current_user.id, type: :hidden%>
        </div>
          <br/>
        <div class="form-group text-center">
          <%= form.submit class: "btn btn-primary form-control" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
