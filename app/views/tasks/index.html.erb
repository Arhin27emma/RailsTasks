<h1>Tasks Manager </h1>
<br/>

<div>
  <table class="table table-striped table-hover mx-auto">
  <thead class="table-dark text-center">
    <tr>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone Number</th>
      <th scope="col">LinkedIn</th>
      <th scope="col">Github</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <%= render task %>
      <tr>
        <td><%= task.first_name %></td>
        <td><%= task.last_name %></td>
        <td><%= task.email %></td>
        <td><%= task.phone %></td>
        <td><%= task.linkedIn %></td>
        <td><%= task.github %></td>
        <td><%= link_to "Show", task, class:"btn btn-primary" %></td>
        <td><%= link_to "Update", edit_task_path(task), class:"btn btn-warning" %></td>
        <td><%= button_to "Delete", task, method: :delete, class:"btn btn-danger" %></td>
      </tr>
  <% end %>
    
</table>

<%= link_to "New task", new_task_path, class:"btn btn-primary" %>